pipeline {
  agent none

  stages {
    stage('Build Java App') {
      agent {
        docker {
          image 'maven:3.8.1-openjdk-11'
          args '-v /root/.m2:/root/.m2' // cache Maven dependencies
        }
      }
      steps {
        dir('backend') {
          sh 'mvn clean compile'
          sh 'mvn exec:java -Dexec.mainClass=HelloWorld'
        }
      }
    }

    stage('Run Node.js App') {
      agent {
        docker {
          image 'node:16'
        }
      }
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'node hello.js'
        }
      }
    }
  }
}
