pipeline {
  agent none

  stages {
    stage('Build & Run Java App') {
      agent {
        docker {
          image 'maven:3.8.1-openjdk-11'
          args '-v /root/.m2:/root/.m2' // cache Maven dependencies
        }
      }
      steps {
        dir('myapplication-execution/backend') {
          // Compile and run HelloWorld using exec-maven-plugin
          sh 'mvn clean compile exec:java'
        }
      }
    }

    stage('Test Java App') {
      agent {
        docker {
          image 'maven:3.8.1-openjdk-11'
          args '-v /root/.m2:/root/.m2'
        }
      }
      steps {
        dir('myapplication-execution/backend') {
          sh 'mvn test'
        }
      }
    }

    stage('Run Node.js App') {
      agent {
        docker {
          image 'node:16'
        }
      }
      steps {
        dir('myapplication-execution/frontend') {
          // Use npm install instead of npm ci (no package-lock.json yet)
          sh 'npm install'
          sh 'node hello.js'
        }
      }
    }

    stage('Test Node.js App') {
      agent {
        docker {
          image 'node:16'
        }
      }
      steps {
        dir('myapplication-execution/frontend') {
          sh 'npm test || echo "No tests defined"'
        }
      }
    }
  }

  post {
    always {
      echo 'Pipeline execution completed.'
    }
    success {
      echo 'Build and run stages completed successfully!'
    }
    failure {
      echo 'Pipeline failed. Check logs for details.'
    }
  }
}
